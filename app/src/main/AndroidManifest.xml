<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pokemons">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PokemonApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pokemons">
        <activity
            android:name=".presentation.fight_preview.FightPreviewActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.check.CheckActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.main_menu.MainMenuActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.menu.MenuActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.welcome.WelcomeActivity"
            android:exported="false"></activity>
    </application>

</manifest>